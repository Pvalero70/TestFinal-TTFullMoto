<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_seq_inherit_form" model="ir.ui.view">
        <field name="name">res.partner.seq.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="before">

                <field name="sequencial_code_prov" string="Sequencial Code Proveedor" attrs="{'invisible': [('supplier_rank','=', 0)]}"/>
                <field name="sequencial_code_client" string="Sequencial Code Cliente" attrs="{'invisible': [('customer_rank','=', 0)]}"/>
            </xpath>

        </field>
    </record>

</odoo>