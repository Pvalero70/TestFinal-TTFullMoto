<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_sale_order_inherit" model="ir.ui.view">
			<field name="name">sale.order.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<field name="payment_term_id" position="after">
					<field name="company_currency_id" invisible="1"/>
					<field name="approve_needed" invisible="0"/>
					<field name="sale_credit_limit_customer_total" widget="monetary"
                                    options="{'currency_field': 'company_currency_id', 'field_digits': True}"/>
					
				</field>


				
				<header>
					<button
							name="action_request_approve"
							string="Solicitar aprobación"
							type="object"
							class="btn-primary"
							attrs="{'invisible': ['|', ('state', 'not in', ['draft']),('approve_needed', '=', False)]}"
                    />
				</header>
			</field>
		</record>

		<record id="action_to_be_approved_sale_orders" model="ir.actions.act_window">
            <field name="name">Ventas esperando aprobación</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="context">{}</field>
            <field name="domain">[('state', '=', 'to_be_approved')]</field>
        </record>
        
        <menuitem id="menu_to_be_approved_order_sale"
            name="Ventas esperando aprobación"
            action="action_to_be_approved_sale_orders"
            parent="sale.sale_order_menu"
            sequence="1" />

        <!--Override Existing Sale Order Action -->
        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        	<field name="domain">[('state','in',('draft','sent','cancel'))]</field>
    	</record>

	</data>
</odoo>