<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_op_c_tree" model="ir.ui.view">
        <field name="name">view.stock.move.line.opc_tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <field name="lot_id" position="after">
                <field name="is_moto" invisible="1"/>
                <!--invisible="context.get('not_is_moto', True)"-->
                <!--attrs="{'column_invisible': [('parent.move_type', 'not in', ('out_invoice', 'out_refund'))]}"-->
                <field name="motor_number"
                       attrs="{'column_invisible': [('is_moto', '=', True)]}"/>
            </field>
        </field>
    </record>
</odoo>